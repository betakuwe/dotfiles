;; Set text height
(defun set-height-by-system-name-and-display ()
  (thread-last
    (cond
     ;; On macbook air
     ((equal (system-name) "Benjamins-Air") 150)
     ;; On work laptop
     ((if (> (x-display-pixel-width) 2560) 75 100)))
    (set-face-attribute 'default nil :height)))

(set-height-by-system-name-and-display)

